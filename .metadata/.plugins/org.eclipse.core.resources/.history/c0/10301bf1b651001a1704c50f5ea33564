import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		Aritmetica ar = new Aritmetica();	
		
		System.out.printf("Numero 1: ");
		ar.setNum1(sc.nextInt());
		System.out.printf("Numero 2: ");
		ar.setNum2(sc.nextInt());
		System.out.printf("Numero 3: ");
		ar.setNum3(sc.nextInt());
		
		System.out.println("Soma: " + ar.soma());
		System.out.println("Produto: " + ar.produto());
		System.out.println("Média: " + ar.media());
		System.out.println("Maior numero: " + ar.maior());
		System.out.println("Menor numero: " + ar.menor());
	}
}
