
public class Aritmetica {

	private int num1;
	private int num2;
	private int num3;
	
	public void setNum1(int num1) {
		this.num1 = num1;
	}
	public void setNum2(int num2) {
		this.num2 = num2;
	}
	public void setNum3(int num3) {
		this.num3 = num3;
	}
	public int soma() {
		return num1+num2+num3;
	}
	public int produto() {
		return num1*num2*num3;
	}
	public float media() {
		return (num1+num2+num3)/3;
	}
	public int maior() {
		int maior;
		if (num1>num2 && num1>num3) {
			maior =num1;
		}else if (num2>num3) {
			maior =num2;
		}else {
			maior=num3;
		}
		return maior;
	}
	public int menor() {
		int menor;
		if (num1<num2 && num1<num3) {
			menor =num1;
		}else if (num2<num3) {
			menor =num2;
		}else {
			menor=num3;
		}
		return menor;	
	}
}
