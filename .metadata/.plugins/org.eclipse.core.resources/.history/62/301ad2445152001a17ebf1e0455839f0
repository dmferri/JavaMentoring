import java.util.Scanner;

public class Main {
	
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		Circulo circulo = new Circulo();
		
		System.out.printf("Digite o valor do Raio: ");
		circulo.setRaio(sc.nextInt());
		
		System.out.println("Diametro: " + circulo.diametro());
		System.out.println("Circunferência: " + circulo.circunferencia());
		System.out.println("Área: " + circulo.area());
	}
}
